/* 层级规范（全局使用） */
.chat-page.data-v-5a559478 {
  display: flex;
  flex: 1;
  min-height: 0;
  background: #ffffff;
  border-radius: 15rpx;
  height: 84vh;
}

/* 桌面：右侧聊天主区域 */
.chat-main.data-v-5a559478 {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-width: 0;
  min-height: 0;
  height: 100%;
}

/* 桌面：左右并排；移动：上下（Header + 内容） */
.chat-page.layout-desktop.data-v-5a559478 {
  flex-direction: row;
}
.chat-page.layout-mobile.data-v-5a559478 {
  flex-direction: column;
}

/* 移动端容器（扣掉 header 高度） */
.mobile-chat-container.data-v-5a559478 {
  flex: 1;
  /* 关键：跟随父容器纵向伸展 */
  position: relative;
  display: flex;
  flex-direction: column;
  min-height: 0;
}

/* 抽屉容器（uni-popup 内容区），统一宽度与背景 */
.popup-drawer.data-v-5a559478 {
  max-width: 640rpx;
  height: 100dvh;
  height: 100vh;
  /* 回退 */
  background: #ffffff;
}

/* 顶部安全区：H5 使用 env/变量；MP 通过内联样式设置 */
.popup-drawer.data-v-5a559478 {
  padding-top: var(--safe-top, 0px);
  padding-top: constant(safe-area-inset-top);
  padding-top: env(safe-area-inset-top);
}

/* 移动端聊天区域 */
.mobile-chat-main.data-v-5a559478 {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-height: 0;
  min-width: 0;
  overflow: hidden;
}
.message-list-container.data-v-5a559478 {
  flex: 1;
  padding: 18rpx;
  min-height: 0;
  /* 中文注释：中间消息列表承担滚动 */
  overflow-y: auto;
  /* 中文注释：H5 防止滚动穿透/链式滚动，提升滚动体验 */
  overscroll-behavior: contain;
  -webkit-overflow-scrolling: touch;
}

/* 确保滚动正常工作 */
.message-list-container.data-v-5a559478::-webkit-scrollbar {
  width: 6rpx;
}
.message-list-container.data-v-5a559478::-webkit-scrollbar-thumb {
  background: #cbd5e1;
  border-radius: 3rpx;
}
.message-list-container.data-v-5a559478::-webkit-scrollbar-thumb:hover {
  background: #94a3b8;
}