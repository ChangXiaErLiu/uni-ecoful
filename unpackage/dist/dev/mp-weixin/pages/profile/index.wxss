/* 层级规范（全局使用） */
.profile.data-v-201c0da5 {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  background-color: #f5f7fa;
  padding: 32rpx;
  height: 96vh;
}

/* 用户信息头部 */
.profile__header.data-v-201c0da5 {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  padding: 30rpx;
  border-radius: 24rpx;
  color: black;
  background-color: white;
}
.profile__avatar-section.data-v-201c0da5 {
  display: flex;
  align-items: center;
  gap: 24rpx;
  flex: 1;
}
.profile__avatar.data-v-201c0da5 {
  width: 120rpx;
  height: 120rpx;
  border-radius: 20%;
  display: flex;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}
.profile__info.data-v-201c0da5 {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  flex: 1;
}
.profile__name.data-v-201c0da5 {
  font-size: 36rpx;
  font-weight: 700;
}
.profile__role.data-v-201c0da5 {
  font-size: 28rpx;
  border-radius: 20rpx;
  align-self: flex-start;
}
.profile__desc.data-v-201c0da5 {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.4;
}
.profile__button.data-v-201c0da5 {
  padding: 0 32rpx;
  height: 64rpx;
  border-radius: 32rpx;
  font-size: 26rpx;
  font-weight: 500;
  border: none;
  background: rgba(255, 255, 255, 0.2);
  color: #ffffff;
  white-space: nowrap;
}
.profile__button--primary.data-v-201c0da5 {
  background: rgba(255, 255, 255, 0.9);
  color: #276019;
  font-weight: 600;
}

/* 卡片样式 */
.profile__card.data-v-201c0da5 {
  background-color: #ffffff;
  border-radius: 20rpx;
}
.profile__card-header.data-v-201c0da5 {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 32rpx 32rpx 24rpx;
  border-bottom: 1rpx solid #f1f5f9;
}
.profile__card-title.data-v-201c0da5 {
  font-size: 30rpx;
  font-weight: 600;
  color: #0f172a;
}
.profile__card-content.data-v-201c0da5 {
  padding: 0;
}
.profile__card-row.data-v-201c0da5 {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 32rpx;
  border-bottom: 1rpx solid #f8fafc;
  transition: background-color 0.2s;
}
.profile__card-row.data-v-201c0da5:active {
  background-color: #f8fafc;
}
.profile__card-row.data-v-201c0da5:last-child {
  border-bottom: none;
}
.profile__card-left.data-v-201c0da5 {
  display: flex;
  align-items: center;
  gap: 20rpx;
  flex: 1;
}
.profile__card-label.data-v-201c0da5 {
  font-size: 28rpx;
  color: #334155;
  font-weight: 500;
}
.profile__card-right.data-v-201c0da5 {
  display: flex;
  align-items: center;
  gap: 16rpx;
}
.profile__card-value.data-v-201c0da5 {
  font-size: 28rpx;
  color: #64748b;
}
.profile__card-value--bound.data-v-201c0da5 {
  color: #276019;
  font-weight: 500;
}
.profile__card-desc.data-v-201c0da5 {
  font-size: 26rpx;
  color: #94a3b8;
}
.profile__card-version.data-v-201c0da5 {
  font-size: 26rpx;
  color: #64748b;
  background: #f1f5f9;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
}

/* Picker 样式 */
.profile__picker.data-v-201c0da5 {
  padding: 16rpx 24rpx;
  border-radius: 16rpx;
  background-color: #f8fafc;
  color: #276019;
  font-size: 28rpx;
  font-weight: 500;
  min-width: 200rpx;
  text-align: right;
}

/* 退出登录 */
.profile__logout-btn.data-v-201c0da5 {
  width: 100%;
  background: green;
  color: white;
  border: none;
  border-radius: 16rpx;
  padding: 2rpx;
  font-size: 32rpx;
  font-weight: 600;
}
.profile__logout-btn.data-v-201c0da5:active {
  opacity: 0.9;
  transform: scale(0.98);
}

/* 安全区域 */
.safe-area-bottom.data-v-201c0da5 {
  height: env(safe-area-inset-bottom);
  min-height: 0rpx;
}

/* 响应式适配 */
@media (max-width: 1023px) {
.profile__header.data-v-201c0da5 {
    flex-direction: column;
    align-items: stretch;
}
.profile__button.data-v-201c0da5 {
    width: 100%;
}
.profile__cards.data-v-201c0da5 {
    flex-direction: column;
}
}