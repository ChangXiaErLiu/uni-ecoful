.doc-generator.data-v-dc41b1ac {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
  min-height: 100vh;
  padding: 32rpx;
  background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
}
.doc-generator__header.data-v-dc41b1ac {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}
.doc-generator__title-section.data-v-dc41b1ac {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}
.doc-generator__title.data-v-dc41b1ac {
  font-size: 48rpx;
  font-weight: 700;
  color: #0f172a;
  line-height: 1.2;
}
.doc-generator__subtitle.data-v-dc41b1ac {
  font-size: 28rpx;
  color: #64748b;
  line-height: 1.4;
}
.doc-generator__content.data-v-dc41b1ac {
  display: flex;
  gap: 32rpx;
  flex: 1;
}
.doc-generator__left-panel.data-v-dc41b1ac {
  width: 480rpx;
  min-width: 400rpx;
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 24rpx rgba(15, 23, 42, 0.08);
  border: 1rpx solid #f1f5f9;
}
.doc-generator__main-panel.data-v-dc41b1ac {
  flex: 1;
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 24rpx rgba(15, 23, 42, 0.08);
  border: 1rpx solid #f1f5f9;
  display: flex;
  flex-direction: column;
  gap: 40rpx;
}
.doc-generator__section.data-v-dc41b1ac {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}
.doc-generator__section-header.data-v-dc41b1ac {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.doc-generator__section-title.data-v-dc41b1ac {
  font-size: 32rpx;
  font-weight: 600;
  color: #0f172a;
}
.doc-generator__section-count.data-v-dc41b1ac,
.doc-generator__section-tip.data-v-dc41b1ac {
  font-size: 24rpx;
  color: #64748b;
}

/* 模板列表样式 */
.doc-generator__template-list.data-v-dc41b1ac {
  max-height: 600rpx;
}
.doc-generator__template.data-v-dc41b1ac {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 28rpx 24rpx;
  margin-bottom: 16rpx;
  border-radius: 20rpx;
  background: #f8fafc;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
  position: relative;
}
.doc-generator__template.data-v-dc41b1ac:active {
  transform: translateY(2rpx);
}
.doc-generator__template--active.data-v-dc41b1ac {
  background: linear-gradient(135deg, rgba(59, 130, 246, 0.08), rgba(59, 130, 246, 0.04));
  border-color: #3b82f6;
  box-shadow: 0 4rpx 20rpx rgba(59, 130, 246, 0.12);
}
.doc-generator__template--recommended.data-v-dc41b1ac::before {
  content: "";
  position: absolute;
  top: -2rpx;
  left: -2rpx;
  right: -2rpx;
  height: 4rpx;
  background: linear-gradient(90deg, #10b981, #3b82f6);
  border-radius: 20rpx 20rpx 0 0;
}
.doc-generator__template-icon.data-v-dc41b1ac {
  width: 56rpx;
  height: 56rpx;
  border-radius: 16rpx;
  background: rgba(59, 130, 246, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}
.doc-generator__template--active .doc-generator__template-icon.data-v-dc41b1ac {
  background: rgba(59, 130, 246, 0.2);
}
.doc-generator__template-content.data-v-dc41b1ac {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}
.doc-generator__template-header.data-v-dc41b1ac {
  display: flex;
  align-items: center;
  gap: 12rpx;
}
.doc-generator__template-name.data-v-dc41b1ac {
  font-size: 28rpx;
  font-weight: 600;
  color: #0f172a;
}
.doc-generator__template--active .doc-generator__template-name.data-v-dc41b1ac {
  color: #3b82f6;
}
.doc-generator__template-badge.data-v-dc41b1ac {
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  background: linear-gradient(135deg, #10b981, #059669);
  color: #ffffff;
  font-weight: 500;
}
.doc-generator__template-desc.data-v-dc41b1ac {
  font-size: 24rpx;
  color: #64748b;
  line-height: 1.4;
}
.doc-generator__template-checked.data-v-dc41b1ac {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  background: #3b82f6;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 上传区域样式 */
.doc-generator__uploader.data-v-dc41b1ac {
  border: 2rpx dashed #cbd5e1;
  border-radius: 24rpx;
  padding: 60rpx 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
  background: #fafafa;
  transition: all 0.3s ease;
}
.doc-generator__uploader.data-v-dc41b1ac:active {
  background: #f1f5f9;
  border-color: #3b82f6;
}
.doc-generator__uploader-icon.data-v-dc41b1ac {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: rgba(59, 130, 246, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
}
.doc-generator__uploader-title.data-v-dc41b1ac {
  font-size: 32rpx;
  font-weight: 600;
  color: #0f172a;
}
.doc-generator__uploader-text.data-v-dc41b1ac {
  font-size: 26rpx;
  color: #64748b;
  text-align: center;
  line-height: 1.5;
}

/* 文件列表样式 */
.doc-generator__file-list.data-v-dc41b1ac {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}
.doc-generator__file-item.data-v-dc41b1ac {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  background: #f8fafc;
  border-radius: 16rpx;
  border: 1rpx solid #e2e8f0;
  transition: all 0.2s ease;
}
.doc-generator__file-item.data-v-dc41b1ac:active {
  background: #f1f5f9;
}
.doc-generator__file-info.data-v-dc41b1ac {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex: 1;
}
.doc-generator__file-icon.data-v-dc41b1ac {
  width: 48rpx;
  height: 48rpx;
  border-radius: 12rpx;
  background: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1rpx solid #e2e8f0;
}
.doc-generator__file-details.data-v-dc41b1ac {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}
.doc-generator__file-name.data-v-dc41b1ac {
  font-size: 28rpx;
  font-weight: 500;
  color: #0f172a;
}
.doc-generator__file-size.data-v-dc41b1ac {
  font-size: 24rpx;
  color: #64748b;
}
.doc-generator__file-actions.data-v-dc41b1ac {
  display: flex;
  align-items: center;
  gap: 20rpx;
}
.doc-generator__file-status.data-v-dc41b1ac {
  font-size: 24rpx;
  font-weight: 500;
  padding: 6rpx 12rpx;
  border-radius: 6rpx;
}
.doc-generator__file-status--success.data-v-dc41b1ac {
  background: rgba(16, 185, 129, 0.1);
  color: #059669;
}
.doc-generator__file-status--uploading.data-v-dc41b1ac {
  background: rgba(59, 130, 246, 0.1);
  color: #3b82f6;
}
.doc-generator__file-action.data-v-dc41b1ac {
  padding: 8rpx;
  border-radius: 8rpx;
  transition: all 0.2s ease;
}
.doc-generator__file-action.data-v-dc41b1ac:active {
  background: #f1f5f9;
}

/* 步骤进度样式 */
.doc-generator__steps.data-v-dc41b1ac {
  display: flex;
  flex-direction: column;
  gap: 0;
}
.doc-generator__step.data-v-dc41b1ac {
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
  padding: 32rpx 0;
  position: relative;
}
.doc-generator__step-indicator.data-v-dc41b1ac {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 0;
  flex-shrink: 0;
}
.doc-generator__step-dot.data-v-dc41b1ac {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  background: #e2e8f0;
  border: 4rpx solid #ffffff;
  box-shadow: 0 0 0 2rpx #e2e8f0;
  transition: all 0.3s ease;
}
.doc-generator__step-line.data-v-dc41b1ac {
  width: 2rpx;
  flex: 1;
  background: #e2e8f0;
  margin: 8rpx 0;
  transition: all 0.3s ease;
}
.doc-generator__step--active .doc-generator__step-dot.data-v-dc41b1ac {
  background: #3b82f6;
  box-shadow: 0 0 0 2rpx #3b82f6;
}
.doc-generator__step--completed .doc-generator__step-dot.data-v-dc41b1ac {
  background: #10b981;
  box-shadow: 0 0 0 2rpx #10b981;
}
.doc-generator__step--completed .doc-generator__step-line.data-v-dc41b1ac {
  background: #10b981;
}
.doc-generator__step-content.data-v-dc41b1ac {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  padding-top: 4rpx;
}
.doc-generator__step-name.data-v-dc41b1ac {
  font-size: 28rpx;
  font-weight: 600;
  color: #0f172a;
}
.doc-generator__step-status.data-v-dc41b1ac {
  font-size: 24rpx;
  color: #64748b;
}
.doc-generator__step--active .doc-generator__step-name.data-v-dc41b1ac {
  color: #3b82f6;
}
.doc-generator__step--completed .doc-generator__step-name.data-v-dc41b1ac {
  color: #10b981;
}
.doc-generator__step--completed .doc-generator__step-status.data-v-dc41b1ac {
  color: #10b981;
}

/* 操作按钮样式 */
.doc-generator__actions.data-v-dc41b1ac {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
  margin-top: auto;
  padding-top: 32rpx;
  border-top: 1rpx solid #f1f5f9;
}
.doc-generator__button.data-v-dc41b1ac {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 0 40rpx;
  height: 88rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
}
.doc-generator__button.data-v-dc41b1ac:active {
  transform: translateY(2rpx);
}
.doc-generator__button--primary.data-v-dc41b1ac {
  background: linear-gradient(135deg, #3b82f6, #2563eb);
  color: #ffffff;
  box-shadow: 0 4rpx 20rpx rgba(59, 130, 246, 0.3);
}
.doc-generator__button--primary.data-v-dc41b1ac:active {
  box-shadow: 0 2rpx 12rpx rgba(59, 130, 246, 0.4);
}
.doc-generator__button--primary.data-v-dc41b1ac:disabled {
  background: #cbd5e1;
  box-shadow: none;
  transform: none;
}
.doc-generator__button--secondary.data-v-dc41b1ac {
  background: #ffffff;
  color: #64748b;
  border: 2rpx solid #e2e8f0;
}
.doc-generator__button--secondary.data-v-dc41b1ac:active {
  background: #f8fafc;
}

/* 响应式设计 */
@media (max-width: 1023px) {
.doc-generator.data-v-dc41b1ac {
    padding: 24rpx;
    gap: 24rpx;
}
.doc-generator__content.data-v-dc41b1ac {
    flex-direction: column;
}
.doc-generator__left-panel.data-v-dc41b1ac {
    width: 100%;
    min-width: auto;
}
.doc-generator__main-panel.data-v-dc41b1ac {
    gap: 32rpx;
}
.doc-generator__template-list.data-v-dc41b1ac {
    max-height: 400rpx;
}
}
/* 桌面端悬停效果 */
@media (min-width: 768px) {
.doc-generator__template.data-v-dc41b1ac:hover {
    transform: translateY(-2rpx);
    box-shadow: 0 8rpx 24rpx rgba(15, 23, 42, 0.12);
}
