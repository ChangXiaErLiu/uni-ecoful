    border-color: #3b82f6;
    background: #f8fafc;
}
.doc-generator__file-item.data-v-dc41b1ac:hover {
    background: #f1f5f9;
}
.doc-generator__button--primary.data-v-dc41b1ac:hover {
    box-shadow: 0 6rpx 24rpx rgba(59, 130, 246, 0.4);
}
.doc-generator__button--secondary.data-v-dc41b1ac:hover {
    background: #f8fafc;
    border-color: #cbd5e1;
}
}