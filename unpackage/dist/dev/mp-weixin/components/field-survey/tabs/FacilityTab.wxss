
	/* 基础样式 */
.facility-tab.data-v-4bdbf4c5 {
		width: 100%;
		min-height: 100vh;
		background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
		padding: 10rpx 0 0 0;
		box-sizing: border-box;
}
.section-card.data-v-4bdbf4c5 {
		background: #ffffff;
		border-radius: 20rpx;
		box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
		overflow: hidden;
		border: 1rpx solid #e2e8f0;
}

	/* 头部样式 */
.section-header.data-v-4bdbf4c5 {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 28rpx 32rpx;
		background: linear-gradient(to right, #f0fdf4, #dcfce7);
		border-bottom: 1rpx solid #bbf7d0;
}
.header-left.data-v-4bdbf4c5 {
		display: flex;
		align-items: center;
		gap: 12rpx;
}
.section-title.data-v-4bdbf4c5 {
		font-size: 32rpx;
		font-weight: 600;
		color: #166534;
		letter-spacing: 0.5rpx;
}
.record-count.data-v-4bdbf4c5 {
		font-size: 26rpx;
		color: #4ade80;
		background: rgba(34, 197, 94, 0.1);
		padding: 8rpx 16rpx;
		border-radius: 20rpx;
}

	/* 搜索和操作栏 */
.search-action-bar.data-v-4bdbf4c5 {
		display: flex;
		flex-direction: column;
		gap: 24rpx;
		padding: 32rpx;
		border-bottom: 1rpx solid #f1f5f9;
}
.search-container.data-v-4bdbf4c5 {
		position: relative;
}
.search-input.data-v-4bdbf4c5 {
		background: #f8fafc;
		border-radius: 12rpx;
		border: 1rpx solid #e2e8f0;
}
.search-result.data-v-4bdbf4c5 {
		position: absolute;
		right: 16rpx;
		top: 50%;
		transform: translateY(-50%);
		font-size: 24rpx;
		color: #64748b;
		background: rgba(100, 116, 139, 0.1);
		padding: 4rpx 12rpx;
		border-radius: 8rpx;
}
.action-buttons.data-v-4bdbf4c5 {
		display: flex;
		gap: 16rpx;
}
.btn.data-v-4bdbf4c5 {
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 8rpx;
		padding: 5rpx 8rpx;
		border-radius: 12rpx;
		font-size: 32rpx;
		font-weight: 500;
		border: none;
		transition: all 0.3s ease;
}
.btn.data-v-4bdbf4c5:active {
		transform: translateY(2rpx);
}
.btn-add.data-v-4bdbf4c5 {
		background: #10b981;
		color: white;
		flex: 1;
}
.btn-refresh.data-v-4bdbf4c5 {
		background: #3b82f6;
		color: white;
		flex: 1;
}
.btn-refresh.data-v-4bdbf4c5:disabled {
		background: #cbd5e1;
		color: #94a3b8;
		cursor: not-allowed;
}
.btn-add-primary.data-v-4bdbf4c5 {
		background: #10b981;
		color: white;
		padding: 20rpx 40rpx;
		margin-top: 24rpx;
}
.btn-retry.data-v-4bdbf4c5 {
		background: #ef4444;
		color: white;
		padding: 16rpx 32rpx;
		margin-top: 16rpx;
}

	/* 加载和错误状态 */
.loading-container.data-v-4bdbf4c5,
	.error-container.data-v-4bdbf4c5,
	.empty-container.data-v-4bdbf4c5 {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		padding: 80rpx 32rpx;
		text-align: center;
}
.loading-spinner.data-v-4bdbf4c5 {
		animation: spin-4bdbf4c5 1s linear infinite;
}
@keyframes spin-4bdbf4c5 {
from {
			transform: rotate(0deg);
}
to {
			transform: rotate(360deg);
}
}
.loading-text.data-v-4bdbf4c5,
	.error-message.data-v-4bdbf4c5,
	.empty-title.data-v-4bdbf4c5 {
		font-size: 28rpx;
		color: #475569;
		margin-top: 24rpx;
		font-weight: 500;
}
.error-message.data-v-4bdbf4c5 {
		color: #dc2626;
}
.empty-tip.data-v-4bdbf4c5 {
		font-size: 26rpx;
		color: #94a3b8;
		margin-top: 12rpx;
		max-width: 500rpx;
}

