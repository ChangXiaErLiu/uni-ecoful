  border-radius: 10px;
}
.field-survey-container.data-v-09ef4bae {
  width: 100%;
}

/* Tab切换样式 */
.reconnoitre-tabs.data-v-09ef4bae {
  flex-shrink: 0;
  background: #ffffff;
  border-bottom: 1px solid #e2e8f0;
  padding: 0 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(15, 23, 42, 0.05);
  z-index: 100;
}
.tabs-container.data-v-09ef4bae {
  display: flex;
  align-items: center;
  gap: 8rpx;
}
.tab-item.data-v-09ef4bae {
  flex: 1;
  padding: 24rpx 16rpx;
  text-align: center;
  position: relative;
  transition: all 0.3s ease;
  cursor: pointer;
}
.tab-item.data-v-09ef4bae:active {
  background: #f8fafc;
}
.tab-item--active.data-v-09ef4bae {
  color: #166534;
}
.tab-item--active.data-v-09ef4bae::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: #166534;
  border-radius: 2rpx 2rpx 0 0;
}
.tab-label.data-v-09ef4bae {
  font-size: 28rpx;
  font-weight: 500;
  color: #64748b;
  transition: color 0.3s ease;
}
.tab-item--active .tab-label.data-v-09ef4bae {
  color: #166534;
  font-weight: 600;
}

/* 响应式设计 - 移动端 */
@media (max-width: 768px) {
.reconnoitre-tabs.data-v-09ef4bae {
    padding: 0 16rpx;
    overflow-x: auto;
}
.tabs-container.data-v-09ef4bae {
    overflow-x: auto;
}
.tab-item.data-v-09ef4bae {
    padding: 20rpx 8rpx;
    min-width: 120rpx;
}
.tab-label.data-v-09ef4bae {
    font-size: 24rpx;
}
}
/* 平板端适配 */
@media (min-width: 769px) and (max-width: 1024px) {
.reconnoitre-tabs.data-v-09ef4bae {
    padding: 0 24rpx;
}
.tab-item.data-v-09ef4bae {
    padding: 22rpx 12rpx;
}
.tab-label.data-v-09ef4bae {
    font-size: 26rpx;
}
}
/* PC端优化 */
@media (min-width: 1025px) {
.tab-item.data-v-09ef4bae:hover {
    background: #f8fafc;
}
.tab-item:hover .tab-label.data-v-09ef4bae {
    color: #166534;
}
}